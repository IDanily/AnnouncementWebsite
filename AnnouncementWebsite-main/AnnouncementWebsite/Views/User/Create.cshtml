@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AnnouncementWebsite.ViewModels.UserActionModel

<partial name ="_CaptchaScripts" />

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Новый пользователь</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <partial name="_CaptchaInput" />
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Имя</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Count" class="control-label">Количество публикаций</label>
                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2" style="text-align: center; margin-top:50px;">
                    <div class="form-group">
                        <input class="form-check-control" type="checkbox" asp-for="IsAdmin">
                        <label class="form-check-label" asp-for="IsAdmin">
                            Админ
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-sm btn-primary rounded-0" />
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0">Вернуться к списку</a>
            </div>
        </form>
    </div>
</div>

